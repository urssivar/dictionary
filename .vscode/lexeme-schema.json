{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kaitag Dictionary Entry",
  "type": "object",
  "required": [
    "id",
    "headword",
    "definitions"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique entry identifier"
    },
    "headword": {
      "type": "string",
      "description": "Main word form"
    },
    "ipa": {
      "type": "string",
      "description": "IPA pronunciation"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Grammar and semantic tags"
    },
    "forms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Word form"
          },
          "gloss": {
            "type": "string",
            "description": "Leipzig gloss abbreviation"
          }
        }
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Dialectal variant form"
          },
          "gloss": {
            "type": "string",
            "description": "Leipzig gloss abbreviation"
          },
          "lect": {
            "type": "string",
            "description": "Dialect/lect code"
          }
        }
      }
    },
    "definitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "translation": {
            "$ref": "#/definitions/bilingualText",
            "description": "Translation in English and/or Russian"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Semantic tags for this definition"
          },
          "synonyms": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Synonymous headwords for this sense"
          },
          "antonyms": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Antonymous headwords for this sense"
          },
          "aliases": {
            "type": "object",
            "properties": {
              "en": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Alternative English translations"
              },
              "ru": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "description": "Alternative Russian translations"
              }
            }
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "text"
              ],
              "properties": {
                "text": {
                  "type": "string",
                  "description": "Example sentence in Kaitag"
                },
                "translation": {
                  "$ref": "#/definitions/bilingualText",
                  "description": "Translation of example"
                }
              }
            }
          }
        }
      }
    },
    "note": {
      "$ref": "#/definitions/bilingualText",
      "description": "Word-level notes"
    },
    "etymology": {
      "$ref": "#/definitions/bilingualText",
      "description": "Etymology and origin information"
    },
    "derived_from": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Source headword(s) for derivation or compounding"
    },
    "see_also": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Related headwords to cross-reference"
    }
  },
  "definitions": {
    "bilingualText": {
      "type": "object",
      "properties": {
        "en": {
          "type": "string",
          "description": "English text"
        },
        "ru": {
          "type": "string",
          "description": "Russian text"
        }
      }
    }
  }
}
