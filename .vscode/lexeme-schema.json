{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Kaitag Dictionary Entry",
  "type": "object",
  "required": [
    "id",
    "headword",
    "definitions"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique entry identifier."
    },
    "headword": {
      "type": "string",
      "description": "Main word form."
    },
    "ipa": {
      "type": "string",
      "description": "IPA pronunciation."
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Grammar, etymology, and register tags (see tags.yaml taxonomy)."
    },
    "forms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Word form."
          },
          "gloss": {
            "type": "string",
            "description": "Leipzig glossing abbreviation (e.g., ipfv, pret, pfv, nom, pl)."
          }
        }
      }
    },
    "variants": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string",
            "description": "Dialectal variant form."
          },
          "gloss": {
            "type": "string",
            "description": "Leipzig gloss abbreviation."
          },
          "lect": {
            "type": "string",
            "description": "Dialect/lect code."
          }
        }
      }
    },
    "definitions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "translation"
        ],
        "properties": {
          "translation": {
            "$ref": "#/definitions/bilingualText",
            "description": "Translation in English/Russian."
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Semantic domain tags for this definition (e.g., kinship, animal, time)."
          },
          "aliases": {
            "type": "object",
            "description": "Alternative translations and hypernyms for search discoverability. Not displayed in UI. Includes both strict synonyms and category terms (e.g., 'dog' for 'puppy', 'month' for 'August').",
            "properties": {
              "en": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "ru": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "note": {
            "$ref": "#/definitions/bilingualText",
            "description": "Notes specific to this definition."
          },
          "examples": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "text"
              ],
              "properties": {
                "text": {
                  "type": "string",
                  "description": "Example sentence in Kaitag."
                },
                "translation": {
                  "$ref": "#/definitions/bilingualText",
                  "description": "Translation of example."
                }
              }
            }
          }
        }
      }
    },
    "note": {
      "$ref": "#/definitions/bilingualText",
      "description": "Word-level notes."
    },
    "etymology": {
      "$ref": "#/definitions/bilingualText",
      "description": "Etymology and origin information. Include for loans (with source), non-obvious semantic shifts, and irregular formations."
    },
    "derived_from": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Source headword(s) for derivation or compounding."
    },
    "see_also": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Related headwords to cross-reference."
    },
    "source": {
      "type": "string",
      "description": "Source code for data provenance (references lookups/sources.yaml)."
    }
  },
  "definitions": {
    "bilingualText": {
      "type": "object",
      "properties": {
        "en": {
          "type": "string",
          "description": "English text."
        },
        "ru": {
          "type": "string",
          "description": "Russian text."
        }
      }
    }
  }
}
